<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/grey_faded"
    tools:context="test.com.adbirdads.ChangeLanguageActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/russianLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/russian"
            android:id="@+id/textView7"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="19sp"
            android:fontFamily="sans-serif-condensed" />

        <View
            android:layout_width="330dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_height="0.2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/textView7"
            android:id="@+id/view1" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:id="@+id/ruFlag"
            android:background="@drawable/orange_check_icon"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/view1"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/englishLayout"
        android:layout_below="@+id/russianLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/english"
            android:id="@+id/textView8"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="19sp"
            android:fontFamily="sans-serif-condensed" />

        <View
            android:layout_width="330dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_height="0.2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/textView8"
            android:id="@+id/view2" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:id="@+id/engFlag"
            android:background="@drawable/orange_check_icon"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/view2"
            android:visibility="visible"/>
        </RelativeLayout>
</RelativeLayout>
