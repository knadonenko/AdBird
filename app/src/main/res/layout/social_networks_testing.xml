<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_faded" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout2"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true">



        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageInstagram"
            android:layout_marginLeft="15dp"
            android:background="@drawable/instagram_logo"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="330dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="0.2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/imageInstagram"
            android:id="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/instagram"
            android:textSize="20sp"
            android:id="@+id/textView"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/imageInstagram"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/imagePlus1"
            android:layout_marginTop="20dp"
            android:background="@drawable/plus_image"
            android:layout_alignEnd="@+id/view" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout3"
        android:layout_marginTop="20dp"
        android:layout_below="@id/relativeLayout2"
        android:layout_alignParentStart="true">



        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageFacebook"
            android:layout_marginLeft="15dp"
            android:background="@drawable/facebook_soon"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="330dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="0.2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/imageFacebook"
            android:id="@+id/view1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/facebook_soon"
            android:textSize="20sp"
            android:textColor="@color/grey_as_sasha"
            android:id="@+id/textView1"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/imageFacebook"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/imagePlus2"
            android:layout_marginTop="20dp"
            android:background="@drawable/plus_image"
            android:layout_alignEnd="@+id/view1"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout4"
        android:layout_marginTop="20dp"
        android:layout_below="@id/relativeLayout3"
        android:layout_alignParentStart="true">



        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageTwitter"
            android:layout_marginLeft="15dp"
            android:background="@drawable/twitter_soon"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="330dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="0.2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/imageTwitter"
            android:id="@+id/view2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/twitter_soon"
            android:textSize="20sp"
            android:textColor="@color/grey_as_sasha"
            android:id="@+id/textView2"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/imageTwitter"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/imagePlus3"
            android:layout_marginTop="20dp"
            android:background="@drawable/plus_image"
            android:layout_alignEnd="@+id/view2"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout5"
        android:layout_marginTop="20dp"
        android:layout_below="@id/relativeLayout4"
        android:layout_alignParentStart="true">



        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageVK"
            android:layout_marginLeft="15dp"
            android:background="@drawable/vk_soon"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="330dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="0.2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/imageVK"
            android:id="@+id/view3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/vk_soon"
            android:textSize="20sp"
            android:textColor="@color/grey_as_sasha"
            android:id="@+id/textView3"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/imageVK"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/imagePlus4"
            android:layout_marginTop="20dp"
            android:background="@drawable/plus_image"
            android:layout_alignEnd="@+id/view3"
            android:visibility="gone"/>

    </RelativeLayout>





</RelativeLayout>