<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/grey_faded"
    tools:context="test.com.adbirdads.HistorySingleItem">

    <ScrollView
        android:layout_width="wrap_content"
        android:scrollbars="none"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/grid_item_corner">

        <ImageView
            android:layout_width="326dp"
            android:layout_height="350dp"
            android:id="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:background="@drawable/img_default"
            android:layout_below="@+id/lineDivider4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GoPro"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/titleText"
            android:layout_alignParentStart="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/titleText"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/lineDivider4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25.08.2014"
            android:textSize="17sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/grey_as_sasha"
            android:id="@+id/textDate"
            android:layout_above="@+id/lineDivider4"
            android:layout_alignEnd="@+id/imageView"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Если вы экстремал либо просто бесбашенная персона, которая ценит жизнь во всех ее красках, то #newgopro для тебя!"
            android:textSize="17sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="8dp"
            android:id="@+id/textView3"
            android:layout_below="@+id/imageView"
            android:layout_alignStart="@+id/titleText"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/textView3"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/lineDivider5" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statusLayout"
            android:layout_below="@+id/lineDivider5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оплачено"
                android:id="@+id/textView4"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="8dp"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:id="@+id/imageView2"
                android:layout_marginRight="5dp"
                android:background="@drawable/like_icon"
                android:layout_toStartOf="@+id/likeTextView"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="265"
                android:fontFamily="sans-serif-condensed"
                android:textSize="17sp"
                android:id="@+id/likeTextView"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/commentstextview"
                android:layout_toStartOf="@+id/imageView3" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:id="@+id/imageView3"
                android:background="@drawable/comments_icon"
                android:layout_toStartOf="@+id/commentstextview"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:fontFamily="sans-serif-condensed"
                android:textSize="17sp"
                android:id="@+id/commentstextview"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp" />

            </RelativeLayout>


    </RelativeLayout>

    </ScrollView>
</RelativeLayout>
