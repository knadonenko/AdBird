<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:id="@+id/ads_layout"
    android:background="@drawable/grid_item_corner"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="163dp"
        android:layout_height="167dp"
        android:id="@+id/adImage"
        android:paddingTop="-2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/img_default"
        android:contentDescription="@string/adsPicture"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="AdvertisementText"
        android:id="@+id/title"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        android:layout_below="@+id/adImage"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="33dp"
        android:id="@+id/postButton"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="10dp"
        android:drawableTop="@drawable/threedots"
        android:background="@android:color/white"
        android:layout_below="@+id/adImage"
        android:layout_alignParentEnd="true" />





</RelativeLayout>